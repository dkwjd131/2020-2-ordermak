<body>
    <section class = "login-form">
        <form id="addmenus" method="post" action="/addmenu">
            <input type="hidden" name="owner_num" id = "owner_num" value="<%=owner_num%>%>">
            <input type="hidden" name="store_num" id = "store_num" value="<%=store_num%>%>">
            <div class="int-area">
                <input type = "text" name = "menu_name" id="menu_name" >
                <label for="menu_name">메뉴 이름</label>
            </div>
            <div class="int-area">
                <input type = "text" name = "price" id="price" >
                <label for="price">메뉴 가격</label>
            </div>
            <div class="int-area">
                <input type = "text" name = "category" id="category" >
                <label for="category">카테고리</label>
            </div>
            <div class="int-area">
                <input type = "text" name = "description" id="description">
                <label for="description">메뉴 설명</label>
            </div>
            <div class="btn-area">
                <button type="submit">추가 하기</button>            
            </div>
        </form>
    </section>
    </body>
