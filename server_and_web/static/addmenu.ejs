                <a href="#" onclick="document.getElementById('goMain').submit();">카사막</a>
            </form>
        </div>
        <ul class="navbar__menu">
            <form id="registerstore1" method=post action="/registerstore1">
                <input type="hidden" name="owner_num" id = "owner_num" value="<%=owner_num%>">
            </form>
            <li><a href="#" onclick="document.getElementById('registerstore1').submit();">매장등록</a></li>
            <form id="sendstorelist" method=post action="/sendstorelist">
                <input type="hidden" name="owner_num" id = "owner_num" value="<%=owner_num%>">
            </form>
